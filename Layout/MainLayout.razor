@code {
    public bool IsShowEditorModal { get; set; } = false;
    protected override void OnInitialized()
    {
        EditorModalService.OpenModal = OpenEditorModal;
        EditorModalService.CloseModal = CloseEditorModal;
    }
    public void OpenEditorModal(List<PropertyDescriptor> Fields)
    {
        EditorModalService.Fields = Fields;
        IsShowEditorModal = true;
        StateHasChanged();
    }
    public void CloseEditorModal()
    {
        EditorModalService.Fields = new List<PropertyDescriptor>();
        IsShowEditorModal = false;
        StateHasChanged();
    }
}